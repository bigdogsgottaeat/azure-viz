extends layout

block content
  div.main(style="width: 100%; height:100%;")
    div#toolbar
      div.layout 
        span.tool
          button.button(onclick="requestUploadVideo()")
            img(src="/icons/add.svg" style="padding-top:8px; width:18px; height:18px; text-align:center;" alt="Home")
          input#criteria(name="citeria" style="vertical-align: top; margin-left: 5px; margin-top: 4px; height: 24px; width: 500px;" placeholder="Search Videos...")
    div.border(style="position: absolute; overflow: auto; top:53px; bottom: 30px; left: 0px; right: 0px;")
      div#mainbox
    div.statusbar
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")  
  script(src="/javascripts/main.js")
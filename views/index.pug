extends layout

block content
  script(src="/javascripts/responder.js")
  div.main(style="width: 100%; height:100%; overflow:hidden;")

    div#toolbar
      div.layout 
        span.tool
          button.button(onclick="uploadVideo()")
            img(src="/icons/add.svg" style="padding-top:8px; width:18px; height:18px; text-align:center;" alt="Upload")
          input#criteria(name="citeria" style="vertical-align: top; margin-left: 5px; margin-top: 4px; margin-right:4px; height: 24px; width: 500px;" placeholder="Search Videos...")
          button.button(id="search")
            img(src="/icons/magnifier.svg" style="padding-top:8px; width:17px; height:17px; text-align:center;" alt="Search")
          button.button(id="refresh")
            img(src="/icons/refresh-button.svg" style="padding-top:8px; width:17px; height:17px; text-align:center;" alt="Refresh")
     
    div.border(style="position:absolute; overflow:auto; top:52px; bottom:20px; left: 0px; right: 0px;")
      div.mainbox(id="mainbox")
    div.statusbar
    
    include ./wait.pug
    include ./upload.pug
    include ./delete.pug
    include ./play.pug

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")  
  script(src="/javascripts/main.js")